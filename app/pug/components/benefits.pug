        },
      ],
    },
  }

.benefits#benefits
  .container
    if index
      h2.benefits__header !{benefits.header}
      p.benefits__subheader.subheader !{benefits.subheader}
      .benefits-items.row
        each item, index in benefits.items
          .benefits__item.col-lg-4.col-md-6
            .benefits__item-image-part
              svg.benefits__item-image
                use(xlink:href="img/sprite.svg#benefits-0" + (index + 1))
            .benefits__item-text-part
              p.benefits__item-header !{item.header}
              p.benefits__item-text !{item.text}
    
    else if page == 'izgotovlenie'
      .benefits-items.row
        each item, index in benefits.izgotovlenie.items
          .benefits__item.col-md-4
            .benefits__item-image-part
              svg.benefits__item-image
                use(xlink:href=item.image)
            .benefits__item-text-part
              p.benefits__item-header !{item.header}
              p.benefits__item-text !{item.text}
    
    else if page == 'remont'
      .benefits-items.row
        each item, index in benefits.remont.items
          .benefits__item.col-md-4
            .benefits__item-image-part
              svg.benefits__item-image
                use(xlink:href=item.image)
            .benefits__item-text-part
              p.benefits__item-header !{item.header}
              p.benefits__item-text !{item.text}

-
  var cta = {
    header: 'Бесплатно проконсультируем <br>по всем волнующим вопросам',
    text: 'Специалист ювелирной мастерской перезвонит вам',
    image: 'img/cta-image.png',
    button: { href: '#', text: 'Получить консультацию' },
    izgotovlenie: {
      cta: [
        {
          header: 'Обращайтесь, если хотите заказать <br>изготовление ювелирных изделий <br>из&nbsp;своего золота или серебра',
          text: 'Обсудим детали, подготовим модель, рассчитаем стоимость <br>и обозначим сроки',
          image: 'img/cta-image2.png',
          button: { href: '#consult', text: 'Получить консультацию' },
        },
        {
          header: 'Оставьте заявку на изготовление <br>ювелирных украшений на заказ – учтем <br>все пожелания и реализуем идеи',
          text: 'Вы получите качественное, красивое и действительно <br>уникальное изделие',
          image: 'img/cta-image3.png',
          button: { href: '#consult', text: 'Получить консультацию' },
        },
      ],
    },
    remont: {
      cta: [
        {
          header: 'Оставьте заявку на ремонт <br>ювелирных изделий в Москве',
          text: 'Качественно и быстро восстановим украшение. Даем гарантии <br>на работу, для каждого случая она рассчитывается индивидуально',
          image: 'img/cta-image2.png',
          button: { href: '#consult', text: 'Получить консультацию' },
        },
      ],
    },
  }



if index
  .cta#cta
    .container
      .cta__inner.row
        .cta__text-part.col-xl-6
          p.cta__header !{cta.header}
          p.cta__text !{cta.text}
        .cta__button-part.col-xl-4
          a.cta__button.btn(href=cta.button.href) !{cta.button.text}
        img.cta__image(src=cta.image, alt="")
        
else if page == 'izgotovlenie'
  +cta(cta.izgotovlenie.cta[0].header, cta.izgotovlenie.cta[0].text, cta.izgotovlenie.cta[0].button.href, cta.izgotovlenie.cta[0].button.text, cta.izgotovlenie.cta[0].image)

else if page == 'remont'
  +cta(cta.remont.cta[0].header, cta.remont.cta[0].text, cta.remont.cta[0].button.href, cta.remont.cta[0].button.text, cta.remont.cta[0].image)
